<div class="container-fluid movies">
    <div class="row">
        <div class="col-3"><button class="button"><a href="/">HOME</a></button></div>
        <br>
        {{#each movie}}
            <div class="col-4">
                <h3 class="movies-title">{{title}}</h3>
                <img src="{{this.image}}" alt="{{this.title}}">
                <p class="movies-p"><a href="/movies/{{_id}}">See details</a></p>
            </div>     
        {{/each}}
    </div>
</div>
